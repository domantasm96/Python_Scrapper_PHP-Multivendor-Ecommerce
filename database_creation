CREATE DATABASE IF NOT EXISTS Sqli_coursework;

USE Sqli_coursework;

SET FOREIGN_KEY_CHECKS=0;
DROP TABLE IF EXISTS User;
DROP TABLE IF EXISTS Seller;
DROP TABLE IF EXISTS Cart;
DROP TABLE IF EXISTS Whishlist;
SET FOREIGN_KEY_CHECKS=1;

SET sql_notes = 0;  

-- CREATE TABLE IF NOT EXISTS User (
-- 	id INT(11) NOT NULL AUTO_INCREMENT,
-- 	PRIMARY KEY (id)
-- );

CREATE TABLE IF NOT EXISTS Seller (
	id INT(11) NOT NULL AUTO_INCREMENT,
	user_id INT(11),
	name VARCHAR(60) DEFAULT NULL, 
	email VARCHAR(60) DEFAULT NULL, 
	mobile VARCHAR(60) DEFAULT NULL, 
	company VARCHAR(60) DEFAULT NULL, 
	about_company VARCHAR(200) DEFAULT NULL,
	ph_no VARCHAR(11) DEFAULT NULL,
	store_name VARCHAR(60) DEFAULT NULL, 
	cancellation_policy VARCHAR(60) DEFAULT NULL, 
	-- 30days VARCHAR(60) DEFAULT NULL, 
	compnay_url VARCHAR(60) DEFAULT NULL, 
	company_address1 VARCHAR(60) DEFAULT NULL, 
	company_address2 VARCHAR(60) DEFAULT NULL,
	PRIMARY KEY (id)
	-- FOREIGN KEY (user_id) REFERENCES User(id) ON DELETE CASCADE
);

CREATE TABLE IF NOT EXISTS Cart(
	id INT(11) NOT NULL AUTO_INCREMENT,
	user_id INT(11),
	s_no INT(11),
	product_name VARCHAR(60) DEFAULT NULL, 
	product_rank VARCHAR(60) DEFAULT NULL, 
	product_color VARCHAR(60) DEFAULT NULL, 
	quantity INT(11),
	subtotal VARCHAR(60) DEFAULT NULL, 
	grandtotal VARCHAR(60) DEFAULT NULL, 
	PRIMARY KEY (id)
	-- FOREIGN KEY (user_id) REFERENCES Seller(id) ON DELETE CASCADE
);

CREATE TABLE IF NOT EXISTS Wishlist(
	id INT(11) NOT NULL AUTO_INCREMENT,
	user_id INT(11),
	product_name VARCHAR(60) DEFAULT NULL, 
	product_rank VARCHAR(60) DEFAULT NULL, 
	product_price VARCHAR(60) DEFAULT NULL,
	PRIMARY KEY (id)
	-- FOREIGN KEY (user_id) REFERENCES Seller(id) ON DELETE CASCADE
);

SET sql_notes = 1;  